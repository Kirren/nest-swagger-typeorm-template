{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "moduleResolution": "node",
    "target": "es2018",
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true,
    "lib": [
      "es2018"
    ],
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/__mocks__",
    "**/*.spec.ts",
    "node_modules",
    "test"
  ]
}
